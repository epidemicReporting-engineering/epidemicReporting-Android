<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reporting.epidemic.epidemicreporting.Activity.SendMessageActivity">

    <ProgressBar
        android:id="@+id/send_message_only_upload_pb"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="输入详细描述"
        android:gravity="top"
        android:id="@+id/send_message_image_desc_et_word_only"
        android:inputType="textMultiLine"/>

    <EditText
        android:id="@+id/send_message_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_message_image_desc_et_word_only"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="输入评分（1～10）"
        android:inputType="number" />


</RelativeLayout>
