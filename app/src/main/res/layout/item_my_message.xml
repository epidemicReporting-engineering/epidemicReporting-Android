<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:background="@color/colorAccent"
        android:id="@+id/item_my_message_status_cover"
        android:layout_alignBottom="@+id/item_my_message_owner"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:id="@+id/item_my_message_status"
            android:textColor="@color/colorWhite"
            android:text="未知" />

    </RelativeLayout>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/item_my_message_status_cover"
        android:layout_marginTop="10dp"
        android:id="@+id/item_my_message_reporter"
        android:text="疫情上报者: " />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/item_my_message_status_cover"
        android:layout_below="@+id/item_my_message_reporter"
        android:id="@+id/item_my_message_desc"
        android:text="疫情描述缺失" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_toEndOf="@+id/item_my_message_status_cover"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/item_my_message_desc"
        android:id="@+id/item_my_message_owner"
        android:text="当前责任人: " />

</RelativeLayout>
